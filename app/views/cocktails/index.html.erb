<div class="banner" style="background-image: linear-gradient(-225deg, rgba(189, 195, 199, 0.26) 0%, rgba(44, 62, 80, 0.26) 50%), url('<%= asset_path "banner-pic.jpg" %>');">
  <div class="banner-content">
    <h1>Welcome</h1>
    <p>Drink with us in Paris</p>
  </div>
</div>

<div class="container card-cocktail">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.url.nil? %>
      <% url = asset_path 'card-pic.jpg' %>
    <% else %>
      <% url = cl_image_path(cocktail.photo, height: 300, width: 400, crop: :fill) %>
    <% end %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(-225deg, rgba(189, 195, 199, 0.26) 0%, rgba(44, 62, 80, 0.26) 50%), url('<%= url %>');">
        <div class="card-description">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
