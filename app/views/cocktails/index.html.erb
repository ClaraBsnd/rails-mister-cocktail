<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= asset_path "banner-pic.jpg" %>');">
  <div class="banner-content">
    <h1>Welcome</h1>
    <p>Drink with us in Paris</p>
  </div>
</div>

<div class="container card-cocktail">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
        <div class="card-description">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>










<%= link_to "Add a cocktail", new_cocktail_path %>
